configuration {
  display-drun: "Applications:";
  display-window: "Windows:";
  drun-display-format: "{name}";
  font: "Hack 16";
  modi: "window,drun";
}

@theme "/dev/null"

* {
  bg: #1e2030;
  bg-alt: #5b5f71;

  fg: #c8d3f5;

  focus: #828bb8;

  background-color: @bg;

  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;
}

window {
  width: 30%;
  border: 3;
  border-color: @focus;
}

element {
  padding: 8 16;
  text-color: @fg;
}

element selected {
  text-color: @bg;
  background-color: @focus;
}

element-text {
  background-color: inherit;
  text-color: inherit;
  vertical-align: 0.5;
}

entry {
  background-color: @bg-alt;
  padding: 16 4;
  text-color: @fg;
}

inputbar {
  children: [prompt, entry];
}

listview {
  background-color: @bg;
  columns: 1;
  lines: 8;
}

mainbox {
  background-color: @bg;
  children: [inputbar, listview];
}

prompt {
  background-color: @bg-alt;
  enabled: true;
  padding: 16;
  text-color: @fg;
}
