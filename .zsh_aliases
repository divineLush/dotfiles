alias ls="ls --color=auto"
alias ll="ls -alh"
alias l="ls -lh"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias gcl="git clone"
alias gs="git status"
alias gd="git diff"
alias ga="git add"
alias gal="git add ."
alias gbr="git branch"
alias gch="git checkout"
alias gcm="git commit -m"
alias gu="git pull origin"
alias gp="git push origin"
alias gl="git log --oneline"
alias gsh="git stash"
alias gshp="git stash pop"
alias gshl="git stash list"

alias untar="tar -zxvf"
alias listar="tar -tzf"

alias upd="sudo pacman -Syu --noconfirm && paru -Sua --noconfirm"
alias key_upd="sudo pacman -Sy archlinux-keyring && pacman -Su"
alias orphans="sudo pacman -Qtdq | sudo pacman -Rns -"

alias e="$EDITOR"
alias v="$VISUAL"
alias epub="mupdf -U ~/epub-styles.css"
alias myip="curl ipinfo.io/ip"
alias wr="curl wttr.in/?format='%l:+%C+%t\n'"
alias moon="curl wttr.in/Moon"
alias vpn="sudo openvpn --config"
alias bat="cat /sys/class/power_supply/BAT*/uevent"
alias rmlock="sudo rm /var/lib/pacman/db.lck"
alias usb="udisksctl mount -b"
